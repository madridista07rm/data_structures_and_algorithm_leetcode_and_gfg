class Solution {
public:
    int majorityElement(vector<int>& nums) {
        int n=nums.size();
        sort(nums.begin(),nums.end());
        int count=0,ele;
        if(n==1){
            return nums[0];
        }
        for(int i=0;i<n;i++){
            if(count>=n/2){
                ele=nums[i];
                break;
            }
            if(nums[i]==nums[i+1]){
                count++;
            }
            else{
                count=1;
            }
        }
      return ele;
    }
};
